#include <iostream>
#include <cmath>

using namespace std;

bool isPrime(int n) {
    if (n <= 1) {
        return false;
    }
    for (int i = 2; i <= sqrt(n); i++) {
        if (n % i == 0) {
            return false;
        }
    }
    return true;
}

int main() {
    int HP = 100;
    int level = 5;
    int phoenixdown = 1;
    int n1 = ((level + phoenixdown) % 5 + 1) * 3;
    int s1 = 0;
    int count = 0;
    for (int i = 99; i >= 1; i -= 2) {
        if (count == n1) {
            break;
        }
        s1 += i;
        count++;
    }
    HP += (s1 % 100);
    while (!isPrime(HP)) {
        HP++;
    }
    cout << "Updated HP: " << HP << endl;
    return 0;
}
