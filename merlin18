#include <iostream>
#include <string>

using namespace std;

int main() {
    size_t n9;
    cout << "Nhap so luong mon do: ";
    cin >> n9;

    string* n9Arr = new string[n9];
    cout << "Nhap ten cac mon do: " << endl;
    for (size_t i = 0; i < n9; i++) {
        cin >> n9Arr[i];
    }

    string merlinName = "Merlin";
    int hp = 100;
    for (size_t i = 0; i < n9; i++) {
        string itemName = n9Arr[i];
        int count = 0;
        for (char c : merlinName) {
            if (itemName.find(tolower(c)) != string::npos) {
                count++;
            }
        }
        if (count == 6) {
            hp += 2;
        }
    }

    cout << "HP sau khi su dung cac mon do la: " << hp << endl;

    delete[] n9Arr;

    return 0;
}
