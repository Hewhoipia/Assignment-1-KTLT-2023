int HP = 100; // khởi tạo HP ban đầu là 100
bool hasMerlinItems = false; // biến kiểm tra hiệp sĩ có đồ của Merlin hay không

// kiểm tra từng món đồ trong túi
for (size_t i = 0; i < n9; i++) {
  // chuyển tất cả các kí tự của tên món đồ và tên của Merlin thành chữ thường
  std::string lowerCaseItem = n9Arr[i];
  std::transform(lowerCaseItem.begin(), lowerCaseItem.end(), lowerCaseItem.begin(), ::tolower);
  std::string lowerCaseName = "merlin";
  std::transform(lowerCaseName.begin(), lowerCaseName.end(), lowerCaseName.begin(), ::tolower);

  // kiểm tra xem tên món đồ có chứa đủ các kí tự trong tên của Merlin hay không
  int count = 0;
  for (char ch : lowerCaseName) {
    if (lowerCaseItem.find(ch) != std::string::npos) {
      count++;
    }
  }

  if (count == 6) {
    hasMerlinItems = true;
    HP += 2; // tăng HP của hiệp sĩ lên 2
  }
}

// kiểm tra nếu hiệp sĩ có đồ của Merlin thì in ra "YES", ngược lại in ra "NO"
if (hasMerlinItems) {
  std::cout << "YES\n";
} else {
  std::cout << "NO\n";
}

// in ra giá trị của HP sau khi tăng HP từ các món đồ của Merlin
std::cout << HP << "\n";
