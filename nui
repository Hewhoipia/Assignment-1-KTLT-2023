#include <iostream>
#include <vector>

using namespace std;

int main() {
    vector<int> arr = {1, 3, 5, 7, 4, 2}; // Thay đổi giá trị của arr để kiểm tra dãy số khác

    int n = arr.size();
    int mtx = -2, mti = -3; // Khởi tạo giá trị mặc định cho biến mtx và mti

    if (n < 3) {
        cout << "Day khong co hinh dang nui";
        return 0;
    }

    int max_val = arr[0], max_idx = 0;

    for (int i = 1; i < n; i++) {
        if (arr[i] > max_val) {
            max_val = arr[i];
            max_idx = i;
        }
    }

    if (max_idx != 0 && max_idx != n - 1) {
        cout << "Day khong co hinh dang nui";
        return 0;
    }

    int i = 0;
    while (i < max_idx && arr[i] < arr[i + 1]) {
        i++;
    }

    if (i != max_idx) {
        cout << "Day khong co hinh dang nui";
        return 0;
